#!/bin/bash -e

(./scripts/build/build lib/S$ src bin)

if [ $? -ne 0 ]; then
	echo "S$ failed to build"
	exit 1
fi

(./scripts/build/build lib/Stats src bin)

if [ $? -ne 0 ]; then
	echo "S$ failed to build"
	exit 1
fi

(./scripts/build/build lib/Tropigate src bin)

if [ $? -ne 0 ]; then
	echo "Tropigate failed to build"
	exit 1
fi

exit 0